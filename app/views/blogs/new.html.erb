<div class="row">
  <%= form_for @blog do |f| %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :genre %><br>
      <%= f.select :genre, ["Select One", "Video Games", "Sports"] %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

      <%= f.submit 'Create Blog' %>

  <% end %>
</div>
