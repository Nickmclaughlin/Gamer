<div class="row" class="blog_form">
  <%= form_for @blog do |f| %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p class="genre">
      <%= f.label :genre %><br>
      <%= f.select :genre, ["Select One", "Video Games", "Sports"] %>
    </p>

    <p>
      <%= f.label :subgenre %><br>
      <%= f.select :subgenre, ["Select One", "NBA", "MLB", "NFL", "NCAAF", "NCAAMBB", "Soccer", "Xbox One", "PS4", "PC"] %>
    </p>``

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </p>

      <%= f.submit 'Create Blog' %>

  <% end %>


</div>
