<% if current_user = @user %>
 <%= link_to "Post New Blog", new_blog_path %>
<% end %>

<ol>
  <% @blogs.each do |blog| %>
    <li><%= link_to blog.title, blog_path(blog) %> <%= link_to 'Edit', edit_blog_path(blog)%>
      <%= link_to 'Delete', blog_path(blog), method: :delete, data: {confirm: 'Are you sure you want to delete blog?'}, class: "button tiny delete" %>
    </li>
  <% end %>
</ol>
