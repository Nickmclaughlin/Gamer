<div class="row">
  <%= @user.first_name %> <%= @user.last_name %>'s Blog List
  <ul>
    <% @blogs.each do |blog| %>
    <div style="height:60px">
      <li><%= link_to blog.title, blog_path(blog) %>
        <div style="float:right">
          <%= link_to 'Edit', edit_blog_path(blog), class: "button tiny" %>
          <%= link_to 'Delete', blog_path(blog), method: :delete, data: {confirm: 'Are you sure you want to delete blog?'}, class: "button tiny alert" %>
        </div>
      </li>
    </div>
    <% end %>
  </ul>

  <% if current_user = @user %>
   <%= link_to "Post New Blog", new_blog_path %>
  <% end %>
</div>


